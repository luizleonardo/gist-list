<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FavoriteTextViewEmpty">
        <item name="android:gravity">center</item>
        <item name="android:padding">64dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CustomSearchProgressView">
        <item name="android:layout_gravity">end|center</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:indeterminateTint">@android:color/white</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CustomDialogTextView">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RepositoryFavoriteButton">
        <item name="android:layout_gravity">end|top</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/selector_favorite_button</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
        <item name="android:text">""</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ListItemGistFavoriteButton">
        <item name="android:background">@drawable/selector_favorite_button</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
        <item name="android:text">""</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="Error.Content" parent="">
        <item name="android:padding">32dp</item>
    </style>

    <style name="Error.ImageView.Icon" parent="">
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Error.TextView.Title" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:text">@string/error_title</item>
    </style>

    <style name="Error.TextView.Message" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:maxLines">4</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Error.Button.Retry" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:minWidth">350dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@color/dark_gray</item>
        <item name="android:text">@string/error_button_retry</item>
    </style>

</resources>